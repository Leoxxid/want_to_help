<!DOCTYPE html>
<html>
  <head>
    <title>WantToHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <% if user_signed_in? %>
    <nav>
      <div class="nav-wrapper">
        <a href="<%= root_path %>" class="brand-logo">WantToHelp</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
          <ul id="dropdown1" class="dropdown-content">
            <li><a href="<%= edit_user_registration_path %>">Profile</a></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: "delete" %></li>
          </ul>
        </ul>
      </div>
    </nav>
  <% end %>
  <% if params[:controller]["devise/sessions"] %>
    <%= yield %>
  <% else %>
    <br>
    <div class="container">
      <%= yield %>
    </div>
  <% end %>

  </body>
</html>
